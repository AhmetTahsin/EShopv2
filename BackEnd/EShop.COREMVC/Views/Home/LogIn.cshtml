@model UserLoginPageVM


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Giriş Yap</h1>
             <form asp-action="LogIn" asp-controller="Home" method="post" class="p-3 w-75 m-auto">

                <div class="form-group">
                    <label>Kullanıcı Adı:</label>
                    <input asp-for="User.UserName"  class="form-control" placeholder="Kullanıcı Adı">
                </div>

                <div class="form-group">
                    <label>Şifre:</label>
                    <input asp-for="User.Password" type="password" class="form-control" placeholder="Şifre">
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" asp-for="User.RememberMe" > Beni Hatırla
                    </label>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly">
                    <!-- All yapar isek hata mesajları asagıya yazar-->

                </div>

            </form>
            <p class="text-center mt-4">
                <p>@TempData["message"] </p>
                <a asp-action="ResetPassword">Şifremi Unuttum</a> <br />
                <a asp-action="Register">Kayıt Ol</a>
            </p>

        </div>
    </div>
</div>
